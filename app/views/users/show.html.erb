<% provide(:title, @user.name) %>
<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </div>

      <div>
        <%= render "shared/stat" %>
      </div>
    </div>

    <div class="col-md-8">
      <%= render "follow_form" if logged_in? %>
      <div>
        发表说说(<%= @user.microposts.count %>)
      </div>
      <div>
        <%= render @microposts %>
      </div>

      <%== @pagy.series_nav(:bootstrap) %>
    </div>
  </div>
</div>
